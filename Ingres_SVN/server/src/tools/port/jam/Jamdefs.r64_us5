NETSCAPE_API_FLAG 	= "-DNET_SSL -DAIX -D_REENTRANT -DMCC_HTTPD -DXP_UNIX -DSPAPI20" ;
APACHE_API_FLAG 	= "-DAIX=43 -U__STR__" ;
VERS 	= "rs4_us5" ;
VERS64	= "r64_us5" ;
ASM4FLAG = "/usr/include/sys/asdef.s" ; 
ASM4FLAG64 = "-D __64BIT__ /usr/include/sys/asdef.s" ;
ASMACH = "" ;
ASMACH64 = "-a64" ;
AIXASMFILE = "csll.rs4.asm" ; 
AIXASMFILE64 = "../csll.ris64.asm" ; 
CC   = "xlc_r" ;
CCDEBUG = "-g" ;
CPP default = "/lib/cpp" ;
M4              = "/usr/bin/m4" ; 
CCMACH 		= "-qnoro -qhssngl -qchars=signed -qmaxmem=-1 -qcpluscmt -Q -D_BSD=43" ;
CCMACH64 	= "-DADD_ON64 -q64 -qnoro -qhssngl -qchars=signed -qmaxmem=-1 -qcpluscmt -Q -D_BSD=43" ;
CCLDMACH	= "-qthreaded" ;
CCLDMACH64 	= "-q64 -qthreaded" ;
CCLDSERVER 	= "-bmaxdata:0x30000000" ;
CCLDSRVOBJ64 	= "-b64" ;
CCPICFLAG 	= "" ;
SLSFX 		= "a" ;
LIBSFX 		= "a" ;
OBJSFX 		= "o" ;
MWSLSFX 	= "so" ;
CGISFX 		= "cgi" ;
LDLIBPATH	= "/lib /usr/lib /usr/local/lib" ;
LDLIBPATH64 	= "/lib /usr/lib /usr/local/lib" ;
LIBMACH 	= "-lld -lnsl -lcurses" ;
LDLIBMACH	= "-ltli_r -liconv -lpthreads -ldl -lm -lbsd -lc_r -lC_r" ;
LDLIBMACH64	= "-ltli_r -liconv -lpthreads -ldl -lm -lbsd -lc_r -lC_r" ; 
CCSHLDMACH      = "-K -bexpall -brtl -G -bnoentry" ;
CCSHLDMACH64    = "-b64 -K -bexpall -brtl -G -bnoentry" ;
LD_ICE_FLAGS 	= "-brtl -bexpall" ;
LEVEL1_OPTIM 	= "-O" ;
OPTIM 	        = "" ;
IIOPTIM         ?= "-O" ;
NOOPTIM         = "-qnooptimize" ;
LONGLONG	= long long ;
SHELLHEADER 	= ""#!/bin/sh"" ;
BSD42 default = -DBSD42 ;
DIRENT default = -DDIRENT ;
DIRFUNC default = -DDIRFUNC ;
NO_DIRFUNC default = -DNO_DIRFUNC ;
SYS5 default = -DSYS5 ;
C++	= "xlc_r" ;
C++FLAGS = "" ;
C++FLAGS64 = "-Dr64_us5 -DADD_ON64 -qchars=signed -q64" ;
UNDEFFLAG  = "-u " ;
XERC_DEFS	= "-DXML_USE_NATIVE_TRANSCODER -DXML_USE_INMEM_MESSAGELOADER -DXML_USE_NETACCESSOR_SOCKET" ;
XERC_LIBS	= "-lc_r -lC_r" ;
XERC64_LIBS     = "-lc_r -lC_r" ;
DBMS_STACKSIZE = 131072 ;
#
#ICE File extensions
#
ICE_EXT = a ;
CGI_EXT = cgi ;
LEX = flex ;
#
# for readme.html 
#
platform_string = "IBM AIX" ;
extension_string = $(config_string) ;
